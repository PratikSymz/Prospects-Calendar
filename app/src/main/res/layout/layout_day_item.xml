<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:padding="4dp">

    <ImageView
        android:id="@+id/day_item_category_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_beauty_gradient" />

    <TextView
        android:id="@+id/day_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_black"
        android:text="Beauty"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/day_item_category_gradient"
        app:layout_constraintTop_toTopOf="@+id/day_item_category_gradient" />

    <TextView
        android:id="@+id/day_item_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Online"
        android:textColor="#EC407A"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/day_item_category_gradient"
        app:layout_constraintStart_toEndOf="@+id/day_item_category_gradient"
        app:layout_constraintTop_toBottomOf="@+id/day_item_category" />

    <TextView
        android:id="@+id/day_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="$50"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/day_item_payment_method"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/day_item_category"
        app:layout_constraintTop_toTopOf="@+id/day_item_category"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>